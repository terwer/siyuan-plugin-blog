{
  "name": "zhi-theme",
  "version": "1.0.0",
  "description": "zhi theme module",
  "files": [
    "lib",
    "typings"
  ],
  "type": "commonjs",
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "typings": "./typings/index.d.ts",
  "scripts": {
    "watch:css": "stylus --watch theme.styl --out ../../theme.css",
    "build": "pnpm build:css && pnpm build:js",
    "build:css": "stylus --compress theme.styl --out ../../theme.css",
    "dev": "vite",
    "build:js": "rm -rf ./lib && pnpm build:theme && pnpm build:plugin",
    "build:theme": "vite build && cp ./lib/theme.js ../../theme.js",
    "build:plugin": "node --experimental-specifier-resolution=node --loader ts-node/esm build-plugin.mts",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts .",
    "lintcss": "stylelint *.styl --fix",
    "lintcss:fix": "stylelint *.styl --fix",
    "prettier": "prettier --write .",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/node": "16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "@vitest/coverage-c8": "^0.29.2",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "^11.1.0",
    "prettier": "^2.8.4",
    "stylelint": "^15.2.0",
    "stylelint-config-standard": "^30.0.1",
    "stylelint-stylus": "^0.18.0",
    "stylus": "^0.59.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vite-plugin-dts": "^2.1.0",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^0.29.2",
    "vue-eslint-parser": "^9.1.0"
  },
  "dependencies": {
    "zhi-common": "^1.0.5"
  },
  "keywords": [
    "zhi",
    "theme"
  ],
  "repository": "terwer/zhi",
  "homepage": "https://theme.terwer.space",
  "author": "terwer",
  "license": "GPL"
}
